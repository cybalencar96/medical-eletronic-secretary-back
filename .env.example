# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
# PostgreSQL connection settings
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medical_secretary
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medical_secretary
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
# Redis connection for BullMQ queue processing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis

# WhatsApp Cloud API Configuration
# Get credentials from Meta Business Suite: https://business.facebook.com/
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token
# Set to 'true' for development without real WhatsApp API
WHATSAPP_MOCK=true

# OpenAI API Configuration
# Get API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
# Recommended model: gpt-4o-mini for cost-effective intent classification
OPENAI_MODEL=gpt-4o-mini

# JWT Authentication Configuration
# Generate a secure random secret: openssl rand -base64 32
JWT_SECRET=development-secret-change-in-production
JWT_EXPIRES_IN=24h
